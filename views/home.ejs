<!-- views/home.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>TASK MANAGER</title>
  <style>
  body {
    font-family: Arial, sans-serif;
    background-image: url("https://img.freepik.com/free-vector/timing-project-scheduling_74855-4584.jpg");
    background-size: cover;
    background-position: center;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
    position: relative;
  }

  header {
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 1rem 0;
    text-align: center;
    width: 100%;
  }

  nav {
    position: absolute;
    top: 1rem;
    right: 1rem;
  }

  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
  }

  nav li {
    margin: 0 1rem;
  }

  nav a {
    text-decoration: none;
    color: white;
    font-weight: bold;
    transition: color 0.3s;
  }

  nav a:hover {
    color: #ff6600;
  }

  main {
    text-align: center;
    padding: 2rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: rgb(216, 32, 32);
  }

  p {
    font-size: 1.2rem;
    color: #ccc;
    margin: 0;
  }
</style>
</head>
<body>
  <header>
    <nav>
      <ul>
        <li><a href="/signin">Sign In</a></li>
        <li><a href="/signup">Sign Up</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <h1>Welcome to Our Task Manager</h1>
    <p style="color:#0c0c0c">(Create, edit, and manage tasks effortlessly)</p>
  </main>
</body>
</html>
